<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="262dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.539">

        <ToggleButton
            android:id="@+id/seregaBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/toggled_button"
            android:checked="false"
            android:onClick="seregaClicked"
            android:text="Serega"
            android:textColor="@android:color/white"
            android:textOff="Serega"
            android:textOn="Serega" />

        <ToggleButton
            android:id="@+id/danyaBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/toggled_button"
            android:onClick="danyaClicked"
            android:text="Danya"
            android:textColor="@android:color/white"
            android:textOff="Danya"
            android:textOn="Danya" />

        <ToggleButton
            android:id="@+id/maxxBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/toggled_button"
            android:onClick="maxxClicked"
            android:text="Maxx"
            android:textColor="@android:color/white"
            android:textOff="Maxx"
            android:textOn="Maxx" />
    </LinearLayout>

    <Button
        android:id="@+id/nextBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/toggled_off"
        android:onClick="gotoGlassActivity"
        android:text="Next"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>